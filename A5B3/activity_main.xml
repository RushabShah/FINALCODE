<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vijayshah.scientificcalculator.MainActivity">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="="
        android:id="@+id/equal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
  />

    <GridLayout
        android:rowCount="7"
        android:columnCount="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <Button
        android:layout_width="wrap_content"
        android:text="1"
        android:id="@+id/one"
        />
        <Button
            android:layout_width="wrap_content"
            android:text="2"
            android:id="@+id/two"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="3"
            android:id="@+id/three"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="+"
            android:id="@+id/add"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="4"
            android:id="@+id/four"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="5"
            android:id="@+id/five"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="6"
            android:id="@+id/six"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="-"
            android:id="@+id/sub"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="7"
            android:id="@+id/seven"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="8"
            android:id="@+id/eight"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="9"
            android:id="@+id/nine"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="/"
            android:id="@+id/div"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="("
            android:id="@+id/open"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="0"
            android:id="@+id/zero"
            />
        <Button
            android:layout_width="wrap_content"
            android:text=")"
            android:id="@+id/close"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="*"
            android:id="@+id/mul"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="."
            android:id="@+id/dot"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="C"
            android:id="@+id/clear"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="MS"
            android:id="@+id/ms"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="MR"
            android:id="@+id/mr"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="MC"
            android:id="@+id/mc"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="sin"
            android:id="@+id/sin"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="cos"
            android:id="@+id/cos"
            />
        <Button
            android:layout_width="wrap_content"
            android:text="tan"
            android:id="@+id/tan"
            />
    </GridLayout>
</RelativeLayout>
